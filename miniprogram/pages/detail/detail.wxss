@import"/lib/iconfont.wxss";
.topView{
  position: absolute;
  z-index: -1;
  top:0;
  height: 240rpx;
  width: 100%;
  background-color: #2d8cf0;
}

.iconView{
  position: absolute;
  z-index: 0;
  top: 0;
  left: 300rpx;
  height: 150rpx;
  width: 150rpx;
  background-color: #FFF;
  border-radius: 40px;
}

.detail{
  position: relative;
  top:250rpx;
}

.shade{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: rgba(0,0,0,0.8);
  opacity: 0.5;
  overflow: hidden;
}   

.cont {
   width: 600rpx;
   height: 940rpx;
   z-index: 2;
   overflow: hidden;
   position: fixed;
   top: 12%;
   left: 70rpx;  
   font-size: 32rpx; 
   border-radius: 10rpx; 
   box-shadow: 2rpx 4rpx 24rpx #686868;
   background-color: white;
}

.item{
  margin-top:10rpx;
  margin-left: 30rpx;
  width: 540rpx;
  height: 290rpx;
}

.butType{
  background-color:#5cadff;
  color: #fff;
  top:10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}