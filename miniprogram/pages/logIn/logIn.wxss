@import '../../lib/font.wxss';
.name{
  font-family: 'Poiret One';
  text-align: center;
  font-size: 150rpx;
  margin-top: 50rpx;
  color: #000000;
}

.butType{
  background-color:#2d8cf0;
  color: #fff;
  top:160rpx;
  margin-left: 200rpx;
  margin-right: 200rpx;
  border-radius: 30px;
  padding: 0rpx 100rpx;
  z-index: 50;
}
.icon{
  width: 159px;
  height: 180px;
  margin-left: 210rpx;
  margin-top: 40rpx;
}
.text{
  font-size: 60rpx;
  color: #FFF;
  opacity:0.7;
}

.loading{
    position: absolute;
    bottom: 355rpx;
    margin-left: 330rpx;
    vertical-align: middle;
    width: 40px;
    height: 40px;
    background: transparent;
    border-radius: 50%;
    border: 2px solid #2d8cf0;
    border-color: #2d8cf0 #2d8cf0 #2d8cf0 transparent;
    animation: loading-spin 0.6s linear;
    animation-iteration-count: infinite;
    z-index: 49;
}

@keyframes loading-spin {
    0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(360deg);
    }
}

.loadingview{
  width: 100%;
  height: 200rpx;
  z-index: 5;
}

.canvas {
  width:100%;
  height: 610rpx;
  background-color: #fff;
  margin-bottom: -10rpx;
}
.canvasview{
  position: absolute;
  width: 100%;
  bottom: 0;
}