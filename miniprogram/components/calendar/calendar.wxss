.calendar-container {
  padding: 15rpx 45rpx;
}

.flipper {
  transition: 0.6s;
  transform-style: preserve-3d;
}

.front {
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
  width: 514rpx;
  height: 750rpx;
  background-size: 100%;
  overflow: hidden;
  border-radius: 20rpx 50rpx 50rpx 20rpx;
  box-shadow: 2rpx 4rpx 24rpx #686868;
  z-index: 2;
}

.shade {
  background-color: #fff;
  background-size: 100%;
  height: 180rpx;
  margin: 590rpx 0 0;
}

.coverImg{
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}
